
<!-- ヘッダー -->
<header class="main-header">
  <div class="container">
    <h1 class="site-title">映画予約システム</h1>
    <nav class="main-nav">
      <ul>
        <li><a href="#">ホーム</a></li>
        <li><a href="#">今週の注目作品</a></li>
        <li><a href="#">マイページ</a></li>
      </ul>
    </nav>
  </div>
</header>

<!-- メインコンテンツ -->
<main class="main-content">
  <div class="container">
    <h2 class="section-title">現在上映中の映画</h2>
    <div class="movies-grid">
      <% @movies.each do |movie| %>
        <div class="movie-card">
          <div class="movie-thumbnail">
            <%= image_tag "#{movie.thumbnail}.webp", class: "thumbnail" if movie.thumbnail.present? %>
          </div>
          <div class="movie-info">
            <h3 class="movie-title"><%= movie.name %></h3>
            <p class="movie-schedule">公開期間: <%= movie.schedule_start %> ~ <%= movie.schedule_end %></p>
            <p class="movie-details">上映時間: <%= movie.screening_time %>分 | 対象年齢: <%= movie.appropriate_age %>歳以上</p>
            <p class="movie-subtitle">字幕: <%= movie.subtitle ? 'あり' : 'なし' %></p>
            <a href="/movies/<%= movie.id %>" class="details-button">詳細を見る</a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</main>

<!-- フッター -->
<footer class="main-footer">
  <div class="container">
    <p>&copy; 2024 映画予約システム. All rights reserved.</p>
  </div>
</footer>